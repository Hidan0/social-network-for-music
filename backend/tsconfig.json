{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "node",
    "baseUrl": "src",
    "outDir": "dist",
    "sourceMap": true,
    "noImplicitAny": true,
    "resolvePackageJsonImports": true,
    "resolvePackageJsonExports": true,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "strict": true
  },
  "include": ["src/**/*"]
}
